<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}

    {# Hero Banner Title (Layout Builder) #}
    {% if content.field_hero_title %}
        <h1 class="hero-title">{{ content.field_hero_title }}</h1>
    {% endif %}

    {# Hero Banner Subtext (Layout Builder) #}
    {% if content.field_hero_subtext %}
        <p class="hero-subtext">{{ content.field_hero_subtext }}</p>
    {% endif %}

    {# Hero Banner Button (Layout Builder) #}
    {% if content.field_button_link.0['#url'] %}
        <a href="{{ content.field_button_link.0['#url'] }}" class="btn btn-primary">
            {{ content.field_button_link.0['#title'] }}
        </a>
    {% endif %}

    {# Render the rest of the content (required for Layout Builder) #}
    {{ content|without('field_hero_title', 'field_hero_subtext', 'field_button_link') }}
</div>



