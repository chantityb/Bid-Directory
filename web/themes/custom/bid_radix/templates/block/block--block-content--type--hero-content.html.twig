
{%
    set classes = [
        'hero-content',
        'block',
        'block-' ~ configuration.provider|clean_class,
        'block-' ~ plugin_id|clean_class,
    ]
%}

<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}

    {# Hero Banner Title (Layout Builder) #}
    {% if content.field_hero_title %}
        <h1 class="hero-title">{{ content.field_hero_title }}</h1>
    {% endif %}

    {# Hero Banner Subtext (Layout Builder) #}
    {% if content.field_hero_sub_content %}
        {# <p class="hero-subtext">{{ content.field_hero_sub_text }}</p> #}
        {# <p class="hero-subtext">Ready to build something amazing with Drupal? Browse our directory and unlock the full potential of your project</p> #}
        <p class="hero-sub-content">{{content.field_hero_sub_content['#items'].0.value }}</p>

    {% endif %}

    {# Hero Banner Button (Layout Builder) #}
    {% if content.field_button_link.0['#url'] %}
        <a href="{{ content.field_button_link.0['#url'] }}" class="btn btn-primary">
            {{ content.field_button_link.0['#title'] }}
        </a>
    {% endif %}

    {# Render the rest of the content (required when using Layout Builder) #}
    {{ content|without('field_hero_title', 'field_hero_sub_content', 'field_button_link') }}
</div>



