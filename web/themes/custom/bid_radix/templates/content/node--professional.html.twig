<main>
    <article{{ attributes.addClass('professional-details') }}>
      <div class="container">
        <div class="row">
          {# Left Column: Profile Image #}
          <div class="col-md-4 bg-primary text-white p-3">
            {% if content.field_image['#items'] is not empty %}
            <div class="profile-image-wrapper text-center mt-5 mx-auto">
                <img 
                  src="{{ file_url(content.field_image['#items'].0.entity.uri.value) }}" 
                  alt="{{ content.field_image['#items'].0.alt }}" 
                  class="rounded-circle img-fluid"
                >
              </div>
              {% else %}
                <div class="profile-image-wrapper text-center mt-5 mx-auto">
                  <img 
                    src="{{ file_url('public://pictures/default-image.jpg') }}" 
                    alt="Default profile image" 
                    class="rounded-circle img-fluid"
                  >
                </div>
              {% endif %}

              {# Portfolio Button & Experience Level #}
            <div class="additional-details mt-4 p-3 bg-light text-dark rounded">
                {% if content.field_experience_level['#items'] is not empty %}
                    <div class="text-center fw-bold">
                        <h3 class="h5">Experience Level</h3>
                        <p class="mb-0">{{ content.field_experience_level }}</p>
                    </div>
                {% endif %}
                
                {% if content.field_portfolio_link['#items'] is not empty %}
                <div class="mb-3">
                    {# <h3 class="h5">Portfolio</h3> #}
                    <a href="{{ content.field_portfolio_link['#items'].0.url }}" class="btn btn-outline-primary w-100">
                    View Portfolio
                    </a>
                </div>
                {% endif %}
            </div>
          </div>
  
          {# Right Column: Professional Details #}
          <div class="col-md-8 bg-white p-5">
            <h1 class="display-4">{{ label }}</h1>
            <p class="role-title text-muted">{{ content.field_role_title }}</p>
  
            {# Overview #}
            {% if content.field_overview %}
                <section class="mb-4">
                  <h2>Overview</h2>
                  <p>{{ content.field_overview }}</p>
                </section>
            {% endif %}

            {# Expertise #}
            {% if content.field_expertise['#items'] is not empty %}
            <section class="mb-4">
              <h2>Expertise</h2>
              <ul class="list-unstyled mt-2 row row-cols-1 row-cols-md-2 g-3">
                {% for expertise in content.field_expertise['#items'] %}
                  <li class="mb-2 col">
                    <i class="fas fa-check-circle text-primary me-2"></i>{{ expertise.entity.label }}
                  </li>
                {% endfor %}
              </ul>
            </section>
            {% endif %}

             {# Email #}
             {% if content.field_email['#items'] is not empty %}
                <section class="mb-4">
              <h2>Contact</h2>
              <p class="mt-4">
                <i class="fas fa-envelope me-2"></i>
                <a href="mailto:{{ content.field_email['#items'].0.value }}">{{ content.field_email['#items'].0.value }}</a>
            </p>
            </section>
            {% endif %}
  
            {# Location (Map) #}
            {% if content.field_location %}
            <section class="mb-4">
              <h2 class="mb-4">Location</h2>
              {{ content.field_location }}
            </section>
            {% endif %}

  
            {# Social Media #}
            {# {% if content.field_social_media %}
            <section class="mb-4">
              <h2>Social Media</h2>
              <div class="social-media-links">
                {% for social in content.field_social_media['#items'] %}
                  <a href="{{ social.url }}" class="me-3 text-decoration-none">
                    <i class="fab fa-{{ social.platform }} fa-2x"></i>
                  </a>
                {% endfor %}
              </div>
            </section>
            {% endif %} #}
          </div>
        </div>
      </div>
    </article>
  </main>

